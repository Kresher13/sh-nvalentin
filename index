  <!-- the moving NO button -->
  <button id="noBtn" class="no-button">NO ğŸŒ¸</button>

  <!-- celebration screen -->
  <div id="celebrationContainer" class="celebration">
    <h2>yay! ğŸ’</h2>
    <p>you made my heart bloom! ğŸŒ¹â¤ï¸</p>
    <p style="font-size: 5rem;">ğŸ’—ğŸŒ¸ğŸ’—</p>
    <button class="reset-button" id="resetBtn">do it again â†»</button>
  </div>

  <!-- floating decor container -->
  <div id="floatingDecor" class="floating-decor"></div>

  <!-- big static background heart -->
  <div class="bg-heart">â¤ï¸</div>

  <script>
    (function() {
      // DOM elements
      const noButton = document.getElementById('noBtn');
      const yesButton = document.getElementById('yesBtn');
      const questionCard = document.getElementById('questionContainer');
      const celebrationDiv = document.getElementById('celebrationContainer');
      const decorContainer = document.getElementById('floatingDecor');

      // --- move NO button to random viewport position (fully inside) ---
      function moveNoButton() {
        if (!noButton) return;

        // ensure button has dimensions (if hidden, offsetWidth might be 0)
        const btnW = noButton.offsetWidth;
        const btnH = noButton.offsetHeight;
        if (btnW === 0 || btnH === 0) {
          // try again later if button not visible
          setTimeout(moveNoButton, 50);
          return;
        }

        const winW = window.innerWidth;
        const winH = window.innerHeight;

        // calculate safe limits (button must stay fully inside)
        const maxLeft = Math.max(0, winW - btnW);
        const maxTop = Math.max(0, winH - btnH);

        // pick random coordinates
        const randomLeft = Math.floor(Math.random() * (maxLeft + 1));
        const randomTop = Math.floor(Math.random() * (maxTop + 1));

        noButton.style.left = randomLeft + 'px';
        noButton.style.top = randomTop + 'px';
      }

      // --- create floating hearts & flowers (reduced count for mobile) ---
      function createFloatingDecor(count = 22) {
        const symbols = ['â¤ï¸', 'ğŸ§¡', 'ğŸ’›', 'ğŸ’š', 'ğŸ’™', 'ğŸ’œ', 'ğŸŒ¸', 'ğŸŒ¹', 'ğŸŒº', 'ğŸŒ¼', 'ğŸŒ·', 'ğŸ’', 'ğŸŒ»', 'ğŸ¥€', 'âœ¨', 'ğŸ’–', 'ğŸ’—', 'ğŸ’“', 'ğŸŒ¸', 'ğŸµï¸'];
        for (let i = 0; i < count; i++) {
          const span = document.createElement('span');
          span.className = 'float-item';
          const randomSym = symbols[Math.floor(Math.random() * symbols.length)];
          span.textContent = randomSym;

          span.style.left = Math.random() * 100 + '%';
          span.style.top = Math.random() * 100 + '%';
          const size = 1.5 + Math.random() * 3; // 1.5rem - 4.5rem
          span.style.fontSize = size + 'rem';
          const duration = 6 + Math.random() * 10;
          const delay = Math.random() * 6;
          span.style.animation = `floatAround ${duration}s ease-in-out ${delay}s infinite`;
          span.style.transform = `rotate(${Math.random() * 30}deg)`;
          span.style.opacity = 0.5 + Math.random() * 0.4;
          decorContainer.appendChild(span);
        }
      }

      // --- show celebration ---
      function showCelebration() {
        questionCard.style.display = 'none';
        noButton.style.display = 'none';
        celebrationDiv.style.display = 'block';
      }

      // --- reset / reload ---
      function resetPage() {
        window.location.reload();
      }

      // --- event listeners ---

      // YES button
      yesButton.addEventListener('click', showCelebration);
      yesButton.addEventListener('touchstart', (e) => {
        e.preventDefault();  // prevent any double-tap zoom
        showCelebration();
      });

      // NO button: move on any attempt to touch / hover
      noButton.addEventListener('mouseenter', moveNoButton);
      noButton.addEventListener('touchstart', (e) => {
        moveNoButton();
        // we do NOT prevent default entirely, so the button moves immediately
        // but we also add a small extra move on touchmove to be extra sneaky
      });

      // also move on touchmove to catch dragging attempts
      noButton.addEventListener('touchmove', (e) => {
        moveNoButton();
      });

      // if somehow clicked (almost impossible), show playful message
      noButton.addEventListener('click', function(e) {
        alert("ğŸŒ¸ almost! but still NO ğŸ’” (i'll just move again)");
        moveNoButton();
      });

      // reposition on resize / orientation change
      window.addEventListener('resize', function() {
        moveNoButton();
      });
      window.addEventListener('orientationchange', function() {
        setTimeout(moveNoButton, 50);
      });

      // reset button
      document.getElementById('resetBtn').addEventListener('click', resetPage);
      document.getElementById('resetBtn').addEventListener('touchstart', (e) => {
        e.preventDefault();
        resetPage();
      });

      // initial positioning and decorations
      window.addEventListener('load', function() {
        // ensure button is visible and then move
        moveNoButton();
        createFloatingDecor(22);  // mobile friendly count
      });

      // also move after a tiny delay (in case of late layout)
      setTimeout(moveNoButton, 100);

      // extra floating items later (just a few more)
      setTimeout(() => {
        createFloatingDecor(6);
      }, 400);
    })();
  </script>

  <!-- extra style for focus and robustness -->
